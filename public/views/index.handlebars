<!DOCTYPE html>
<html>

	<head>
		<title>{{title}}</title>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<!-- stylesheets -->
		<link rel="stylesheet" href="css/index.css">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

		<!-- models -->
		<script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
		<script src="js/index.js"></script>

		<!-- fonts -->
		<link href='https://fonts.googleapis.com/css?family=Lora' rel='stylesheet' type='text/css'>

		<!-- Google Tag Manager -->
		<noscript><iframe src="//www.googletagmanager.com/ns.html?id=GTM-5MLRSB"
		height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
		<script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
		new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
		j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
		'//www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
		})(window,document,'script','dataLayer','GTM-5MLRSB');</script>
		<!-- End Google Tag Manager -->
	</head>

	<body>
		<header>
			<div class="opaque"></div>
			<div id="pseac">
				<div class="title">
					{{basics.name}}
				</div>
				<div class="subtitle">
					{{{basics.label}}}
				</div>
				<div class="contacts">
					<a href="mailto:{{basics.email}}" target="_blank">{{basics.email}}</a><br />
					{{basics.phone}}
				</div>
				<div class="links">
					{{#basics.profiles}}
						<a href="{{url}}" target="_blank"><i class="item fa fa-{{lower network}}"></i></a>
					{{/basics.profiles}}
				</div>
			</div>
			<footer>
				<small>
					Made with a &nbsp;<i class="fa fa-keyboard-o"></i>
					&nbsp;&nbsp;|&nbsp;&nbsp;
					<a href="javascript:void(0)" onclick="window.location='/pdf'+window.location.search;">
						pdf&nbsp;<i class="fa fa-download"></i>
					</a>
					&nbsp;&nbsp;|&nbsp;&nbsp;
					<a href="https://github.com/pedroseac/cv">
						Source on &nbsp;<i class="fa fa-github"></i>
					</a>
				</small>
			</footer>
		</header>

		<section id="info">
				<div class="content">
					<ul class="card education">
						<div class="title">
							<div class="bullet">
								<i class="fa fa-graduation-cap"></i>
							</div>
							Education
						</div>
						<li class="area">
							{{#education}}
								<div class="title">{{area}}</div>
								<ul>
									<li><i>{{institution}}</i> - {{city}} - {{state}} - {{country}} - {{startDate}}/{{endDate}}</li>
								</ul>
							{{/education}}
						</li>
					</ul>

					<ul class="card skills">
						<div class="title">
							<div class="bullet">
								<i class="fa fa-code"></i>
							</div>
							Skills
						</div>
						{{#skills}}
							<li class="area {{name}}">
								<div class="title">{{name}}</div>
								<ul>
									{{#keywords}}
										<li>{{.}}</li>
									{{/keywords}}
								</ul>
							</li>
						{{/skills}}
					</ul>

					<ul class="card languages">
						<div class="title">
							<div class="bullet">
								<i class="fa fa-globe"></i>
							</div>
							Languages
						</div>
						{{#languages}}
						<li class="area">
							<div class="title">{{language}}</div>
							<ul>
								<li>{{fluency}}</li>
							</ul>
						</li>
						{{/languages}}
					</ul>

					<ul class="card employment">
						<div class="title">
							<div class="bullet">
								<i class="fa fa-building"></i>
							</div>
							Employment
						</div>
						<div class="opaque-top"></div>
						<div class="opaque-bot"></div>
						<ul class="timeline">
							{{#work}}
								<li class="{{#evenOddClass @index same}}{{/evenOddClass}}">
									<div class="bullet"><i class="fa fa-suitcase"></i></div>
									<div class="content">
										<div class="place">
											<a target="_blank" href="{{website}}">
												{{company}}
											</a>
											<span class="when">
												<i class="fa fa-calendar"></i>
												&nbsp;&nbsp;{{startDate}} - {{endDate}}
											</span>
										</div>
										<div class="description">
											{{{summary}}}
										</div>
									</div>
								</li>
							{{/work}}
						</ul>
					</ul>
				</div>
		</section>
	</body>

</html>
